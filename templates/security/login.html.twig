{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Connexion</h2>
                      {% for message in app.flashes('notice') %}
        <div class="alert alert-warning mb-4" role="alert">
            {{ message }}
        </div>
    {% endfor %}

                    {% if error %}
                        <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <form method="post" action="{{ path('app_login') }}">
                        <div class="mb-3">
                            <label for="inputEmail" class="form-label">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                        </div>
                        <div class="mb-3">
                            <label for="inputPassword" class="form-label">Password</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="d-grid">
                            <button class="btn btn-lg" style="background:#DE3C19" type="submit">Connexion</button><br>
                            <p> Pas encore de compte inscrit toi par ici : </p>
                            <a class="nav-link active btn-blue" style="text-align:center" aria-current="page" href="{{path('app_inscription')}}">Inscription</a>
                            <p> Mot de passe oublier </p>
                             <a class="nav-link active btn-blue" style="text-align:center" aria-current="page" href="{{path('app_reset_password')}}">Mot de passe oublier</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
