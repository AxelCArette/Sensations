{% extends 'base.html.twig' %}

{% block title %}Me contacter{% endblock %}

{% block body %}
<div style="margin-top: 100px;"></div>
<div>
    <h2 class="text-center" style="color:#1c618d; font-family: Abril Fatface">Prendre un rendez-vous</h2>
    <div class="calendly-inline-widget" data-url="https://calendly.com/flavie-c?primary_color=1b6a8d" style="min-width:320px;height:700px;"></div>
</div>

<h2 class="text-center" style="color:#1c618d; font-family: Abril Fatface" >Contactez-moi</h2>

<div class="container mt-5">
    <div class="row justify-content-center text-center">
        <div class="col-md-6">
            <div style="background-color: #1e3a56; color: white; padding: 25px; border-radius: 10px;">
                {{ form(form) }}
            </div>
        </div>
    </div>
    <div style="margin-bottom: 45px;"></div>
</div>
{% for message in app.flashes('notice') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}

{% endblock %}
